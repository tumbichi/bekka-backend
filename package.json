    "eslint-plugin-prettier": "4.2.1",
    "jest": "^29.2.2",
    "prettier": "^2.7.1",
    "prisma": "4.2.1",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "2.0.0",
    "typescript": "4.7.4"
  }

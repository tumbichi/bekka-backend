  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --files src/index.ts",
    "lint": "eslint src/**/*.ts",
    "prettier": "prettier 'src/**/*.ts'",
    "lint:fix": "eslint --fix src/**/*.ts",
    "prettier:fix": "prettier --write 'src/**/*.ts'",
    "lint:ci": "npm run lint $(git diff --name-only --diff-filter=ACMRTUXB origin/main | grep  -E \"(.js$|.jsx$|.ts$|.tsx$)\") --quiet",
    "prettier:ci": "prettier --check $(git diff --name-only --diff-filter=ACMRTUXB origin/main | grep  -E \"(.js$|.jsx$|.ts$|.tsx$)\")",
    "start": "node dist/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "web": "node dist/index.js"
  },
